SELECT * FROM consulta;






update medicamento
set nome = 'dipirona'
where id_medicamento =2





select
    co.id_consulta,
    co.data,
    v.nome AS veterinario,
    v.crmv
From consulta co
JOIN veterinario v ON v.id_veterinario = co.id_veterinario;



































